<script src="js/copy_to_clipboard.js"/>
<script>
function copyPNtoclipboard() {
    copyToClipboard("{{.PartNumber}}")
}
</script>

<div class="content_area">
<div class="page_title"> {{- .PageTitle -}}</div>

<div class="inputform_area">

    {{if .ErrorMsg}} 
    <div id="epn_errmsg" class="errmsg"> {{.ErrorMsg}} </div>
    {{else}}
      {{if .PartNumber}}<div id="epn_partnumber" class="partnumber">{{.PartNumber}}</div>
        <a id="epn_partnumber_copybtn" class="clipboard_btn" onclick="copyPNtoclipboard()">Copy</a>

      {{end}}
      
      <div id="epn_project_block" class="param_block">
      <div id="epn_project_label" class="param_label">Project:</div>
      <div id="epn_proejct_value" class="param_value">{{.Project}}</div>
      </div>

      <div id="epn_subsystem_block" class="param_block">
      <div id="epn_subsystem_label" class="param_label">Subsystem:</div>
      <div id="epn_subsystem_value" class="param_value">{{.Subsystem}}</div>
      </div>

      <div id="epn_parttype_block" class="param_block">
      <div id="epn_parttype_label" class="param_label">Part Type:</div>
      <div id="epn_parttype_value" class="param_value">{{.PartType}}</div>
      </div>

      <div id="epn_designer_block" class="param_block">
      <div id="epn_designer_label" class="param_label">Designer:</div>
      <div id="epn_designer_value" class="param_value">{{.Designer}}</div>
      </div>

      <div id="epn_seqnum_block" class="param_block">
      <div id="epn_seqnum_label" class="param_label">Seq Num:</div>
      <div id="epn_seqnum_value" class="param_value">{{.SequenceNumber}}</div>
      </div>

      <div id="epn_description_block" class="param_block">
      <div id="epn_description_label" class="param_label">Description:</div>
      <div id="epn_description_value" class="param_value">{{.Description}}</div>
      </div>

      <div id="epn_datecreated_block" class="param_block">
      <div id="epn_datecreated_label" class="param_label">Date Created:</div>
      <div id="epn_datecreated_value" class="param_value">{{.DateCreated}}</div>
      </div>
    {{end}}
</div>

